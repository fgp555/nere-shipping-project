<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <style>
    /* Estilos para el encabezado y pie de página */
    .header, .footer {
      width: 100%;
      text-align: center;
      font-size: 12px;
      color: #666;
    }
    .content {
      margin-top: 60px;
      margin-bottom: 60px;
    }
    /* Clase para el salto de página */
    .page-break {
      page-break-before: always;
    }
  </style>
</head>
<body>
  <div class="header">
    <p>Encabezado - Mi empresa</p>
  </div>

  <div class="content">
    <h1><%= title %></h1>
    <% products.forEach((product, index) => { %>
      <div>
        <h2><%= product.name %></h2>
        <img src="<%= product.image %>" alt="<%= product.name %>" style="width:200px; height:auto;" />
      </div>

      <% if (index < products.length - 1) { %>
        <!-- Salto de página después de cada producto excepto el último -->
        <!-- <div class="page-break"></div> -->
      <% } %>
    <% }); %>
  </div>

  <div class="footer">
    <p>
      Página <span class="pageNumber"></span> de <span class="totalPages"></span>
    </p>
  </div>
</body>
</html>
